doctype html
html
  head
    title Edit Patient
    link(rel='stylesheet', href='/new.css')
  body
    h1 Edit Patient
    form(action=`/patients/${id}`, method='post')
      label(for='name') Name:
      input(type='text', id='name', name='name', value=patient.name)
      br
      label(for='age') Age:
      input(type='number', id='age', name='age', value=patient.age)
      br
      label(for='gender') Gender:
      select(id='gender', name='gender')
        option(value='male' selected=patient.gender==='male') Male
        option(value='female' selected=patient.gender==='female') Female
        option(value='other' selected=patient.gender==='other') Other
      br
      button(type='submit') Save
      a(href=`/patients/${id}`) Cancel
